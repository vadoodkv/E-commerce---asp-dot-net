@model Ecommerce.Models.Order

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Order Details</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Order Details</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Model.Address.AddresssLine @Model.Address.City @Model.Address.State @Model.Address.PinCode
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>

            <h3>Order Products</h3>


            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Product.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Product.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Product.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderProducts.FirstOrDefault().Qty)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderProducts)
                    {
                        <tr>
                            <td>
                                <img src="@item.Product.Image" width="200" />
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.Qty
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>



    </div>

</div>

